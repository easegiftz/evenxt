# EventNest - Environment Configuration
# Copy this file to .env and configure your actual values

# ===================
# GENERAL APPLICATION
# ===================
NODE_ENV=development
PORT=8080
APP_URL=http://localhost:8080

# ===================
# DATABASE CONFIGURATION
# ===================
DATABASE_URL=your_database_connection_string
REDIS_URL=redis://localhost:6379

# ===================
# SMS PROVIDERS
# ===================

# Twilio SMS Configuration (Primary)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# For client-side access (Vite requires VITE_ prefix)
VITE_TWILIO_ACCOUNT_SID=your_twilio_account_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_auth_token
VITE_TWILIO_PHONE_NUMBER=+1234567890

# MSG91 SMS Configuration (Secondary)
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_SENDER_ID=EVTNST
MSG91_ROUTE=4

# For client-side access
VITE_MSG91_AUTH_KEY=your_msg91_auth_key
VITE_MSG91_SENDER_ID=EVTNST
VITE_MSG91_ROUTE=4

# TextLocal SMS Configuration (Tertiary)
TEXTLOCAL_API_KEY=your_textlocal_api_key
TEXTLOCAL_SENDER=EVTNST

# For client-side access
VITE_TEXTLOCAL_API_KEY=your_textlocal_api_key
VITE_TEXTLOCAL_SENDER=EVTNST

# 2Factor SMS Configuration (Alternative)
TWOFACTOR_API_KEY=your_2factor_api_key

# ===================
# EMAIL PROVIDERS
# ===================

# SendGrid Email Configuration (Primary)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@eventnest.com
SENDGRID_FROM_NAME=EventNest

# For client-side access
VITE_SENDGRID_API_KEY=your_sendgrid_api_key
VITE_SENDGRID_FROM_EMAIL=noreply@eventnest.com
VITE_SENDGRID_FROM_NAME=EventNest

# Amazon SES Configuration (Secondary)
AWS_SES_ACCESS_KEY=your_aws_access_key
AWS_SES_SECRET_KEY=your_aws_secret_key
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@eventnest.com

# For client-side access
VITE_AWS_SES_ACCESS_KEY=your_aws_access_key
VITE_AWS_SES_SECRET_KEY=your_aws_secret_key
VITE_AWS_SES_REGION=us-east-1
VITE_AWS_SES_FROM_EMAIL=noreply@eventnest.com

# Mailgun Configuration (Tertiary)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=eventnest.com
MAILGUN_FROM_EMAIL=noreply@eventnest.com

# For client-side access
VITE_MAILGUN_API_KEY=your_mailgun_api_key
VITE_MAILGUN_DOMAIN=eventnest.com
VITE_MAILGUN_FROM_EMAIL=noreply@eventnest.com

# Postmark Configuration (Alternative)
POSTMARK_API_KEY=your_postmark_api_key
POSTMARK_FROM_EMAIL=noreply@eventnest.com

# ===================
# OTP CONFIGURATION
# ===================

# OTP Settings
OTP_DEFAULT_EXPIRY=5
OTP_MAX_ATTEMPTS=3
OTP_RATE_LIMIT_WINDOW=15
OTP_RATE_LIMIT_MAX=5
OTP_CLEANUP_INTERVAL=15
OTP_ENABLE_PERSISTENCE=true

# Security Settings
SECURITY_ADMIN_OTP_REQUIRED=true
SECURITY_EMPLOYEE_OTP_REQUIRED=true
SECURITY_SUPPLIER_2FA_REQUIRED=true
SECURITY_CAPTCHA_REQUIRED=true

# ===================
# CAPTCHA CONFIGURATION
# ===================

# Google reCAPTCHA
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# hCaptcha (Alternative)
HCAPTCHA_SITE_KEY=your_hcaptcha_site_key
HCAPTCHA_SECRET_KEY=your_hcaptcha_secret_key

# ===================
# SECURITY & MONITORING
# ===================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT_ADMIN=30
SESSION_TIMEOUT_EMPLOYEE=60
SESSION_TIMEOUT_SUPPLIER=120
SESSION_TIMEOUT_CUSTOMER=240

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_ENABLED=true

# ===================
# PAYMENT GATEWAYS
# ===================

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# For client-side access
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id
VITE_RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Cashfree Configuration
CASHFREE_APP_ID=your_cashfree_app_id
CASHFREE_SECRET_KEY=your_cashfree_secret_key

# For client-side access
VITE_CASHFREE_APP_ID=your_cashfree_app_id
VITE_CASHFREE_SECRET_KEY=your_cashfree_secret_key

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# For client-side access
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
VITE_STRIPE_SECRET_KEY=your_stripe_secret_key

# Company Bank Details
COMPANY_ACCOUNT_NUMBER=your_company_account
COMPANY_IFSC_CODE=your_company_ifsc

# For client-side access
VITE_COMPANY_ACCOUNT_NUMBER=your_company_account
VITE_COMPANY_IFSC_CODE=your_company_ifsc

# ===================
# FILE STORAGE & CDN
# ===================

# AWS S3 Configuration
AWS_S3_ACCESS_KEY=your_s3_access_key
AWS_S3_SECRET_KEY=your_s3_secret_key
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET=eventnest-uploads

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===================
# MONITORING & LOGGING
# ===================

# Sentry Error Monitoring
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# LogRocket Session Recording
LOGROCKET_APP_ID=your_logrocket_app_id

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXX-X

# ===================
# SOCIAL AUTHENTICATION
# ===================

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# ===================
# WEBHOOK ENDPOINTS
# ===================

# Webhook URLs for external services
WEBHOOK_PAYMENT_SUCCESS=https://api.eventnest.com/webhooks/payment/success
WEBHOOK_PAYMENT_FAILURE=https://api.eventnest.com/webhooks/payment/failure
WEBHOOK_BOOKING_CONFIRMED=https://api.eventnest.com/webhooks/booking/confirmed

# ===================
# NOTIFICATION ENDPOINTS
# ===================

# Slack Integration
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#eventnest-alerts

# Discord Integration
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=your_teams_webhook_url

# ===================
# DEVELOPMENT TOOLS
# ===================

# Enable debug mode
DEBUG=eventnest:*
LOG_LEVEL=debug

# Hot reload settings
VITE_HMR_PORT=24678
VITE_HMR_HOST=localhost

# ===================
# TESTING CONFIGURATION
# ===================

# Test Database
TEST_DATABASE_URL=your_test_database_url

# Test API Keys (Sandbox)
TEST_TWILIO_ACCOUNT_SID=test_twilio_sid
TEST_SENDGRID_API_KEY=test_sendgrid_key
TEST_RAZORPAY_KEY_ID=test_razorpay_key

# ===================
# PRODUCTION OVERRIDES
# ===================

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# HTTPS Redirect
FORCE_HTTPS=true

# CDN Configuration
CDN_BASE_URL=https://cdn.eventnest.com

# Cache Settings
REDIS_CACHE_TTL=3600
MEMORY_CACHE_MAX_SIZE=100

# ===================
# BACKUP & RECOVERY
# ===================

# Database Backup
BACKUP_S3_BUCKET=eventnest-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
BACKUP_SCHEDULE=0 2 * * *

# ===================
# COMPLIANCE & LEGAL
# ===================

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365

# Cookie Consent
COOKIE_CONSENT_ENABLED=true

# Terms & Privacy
TERMS_VERSION=1.0
PRIVACY_VERSION=1.0

# ===================
# FEATURE FLAGS
# ===================

# Feature toggles
FEATURE_SOCIAL_LOGIN=true
FEATURE_LIVE_CHAT=true
FEATURE_VIDEO_CALLS=false
FEATURE_AI_RECOMMENDATIONS=false
FEATURE_MOBILE_APP=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_ADVANCED_REPORTING=false
FEATURE_MULTI_LANGUAGE=false
FEATURE_DARK_MODE=true

# Beta features
BETA_REAL_TIME_NOTIFICATIONS=false
BETA_VOICE_BOOKING=false
BETA_AR_VENUE_PREVIEW=false

# ===================
# EXTERNAL INTEGRATIONS
# ===================

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Weather API
OPENWEATHER_API_KEY=your_openweather_api_key

# Location Services
MAPBOX_API_KEY=your_mapbox_api_key

# Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID=your_google_calendar_client_id
OUTLOOK_CLIENT_ID=your_outlook_client_id

# Video Conferencing
ZOOM_API_KEY=your_zoom_api_key
MEET_API_KEY=your_google_meet_api_key

# ===================
# BUSINESS INTELLIGENCE
# ===================

# Analytics Platforms
MIXPANEL_TOKEN=your_mixpanel_token
AMPLITUDE_API_KEY=your_amplitude_api_key

# CRM Integration
HUBSPOT_API_KEY=your_hubspot_api_key
SALESFORCE_CLIENT_ID=your_salesforce_client_id

# Customer Support
ZENDESK_SUBDOMAIN=your_zendesk_subdomain
INTERCOM_APP_ID=your_intercom_app_id

# ===================
# DEVELOPMENT NOTES
# ===================

# Environment Setup Instructions:
# 1. Copy this file to .env
# 2. Replace placeholder values with actual credentials
# 3. Never commit .env file to version control
# 4. Use strong passwords and secure API keys
# 5. Rotate credentials regularly in production
# 6. Use environment-specific configurations
# 7. Enable only required features to minimize attack surface
# 8. Monitor usage and costs for third-party services
# 9. Set up proper logging and alerting
# 10. Test configurations in staging before production

# Security Checklist:
# □ All API keys are from official providers
# □ Database credentials are secure
# □ HTTPS is enabled in production
# □ Rate limiting is configured
# □ Input validation is enabled
# □ CORS policies are restrictive
# □ CSP headers are configured
# □ Regular security audits scheduled
# □ Backup strategy implemented
# □ Incident response plan ready
